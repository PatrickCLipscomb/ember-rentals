{{#if addNewAnnouncement}}
  <h1>New announcement</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="announcer">Announcer:</label>
        {{input value=announcer id="announcer"}}
      </div>
      <div class="form-group">
        <label for="text">Text</label>
        {{input value=text id="text"}}
      </div>

      <button {{action 'save4'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'announcementFormShow'}}>New Announcement</button>
{{/if}}
